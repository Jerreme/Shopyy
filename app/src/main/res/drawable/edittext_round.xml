<?xml version="1.0" encoding="utf-8"?>
<!--  res/drawable/edittext_rounded_corners.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/edittext_focused"/>
            <stroke android:width="3dp" android:color="@color/red_border" />
            <corners android:radius="@dimen/edittext_corner" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/edittext_focused"/>
            <stroke android:width="0dp" android:color="@color/edittext_focused" />
            <corners android:radius="@dimen/edittext_corner" />
        </shape>
    </item>

    <item android:state_focused="false">
        <shape>
            <solid android:color="@color/edittext_bg_col"/>
            <stroke android:width="0dp" android:color="@color/edittext_focused" />
            <corners android:radius="@dimen/edittext_corner" />
        </shape>
    </item>
</selector>